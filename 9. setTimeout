    setTimeout(function() {
      $('.alert').hide();
    }, 5000);

    setInterval(function() {
      console.log('안녕');
    },1000);

    var count=5;
    setInterval(function() {
      count=count-1;
      if(count>=0) {
        document.querySelector('.ll').innerHTML=count;
      }
    },1000);

  </script>
